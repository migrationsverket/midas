{
  "name": "theme",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/theme/src",
  "projectType": "library",
  "tags": ["theme"],
  "targets": {
    "style-dictionary-generate": {
      "executor": "@midas-ds/style-dictionary:build-tokens",
      "options": {
        "source": ["{workspaceRoot}/{projectRoot}/tokens/**/*.json"],
        "buildPath": "{workspaceRoot}/{projectRoot}/src/lib/style-dictionary-dist/"
      }
    },
    "build": {
      "dependsOn": ["style-dictionary-generate"],
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/packages/theme"
      },
      "configurations": {
        "production": {
          "optimization": true,
          "sourceMap": false,
          "namedChunks": false,
          "extractLicenses": true,
          "vendorChunk": false
        }
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "npx tz check packages/theme/tokens/*.json",
            "forwardAllArgs": false
          }
        ]
      }
    }
  }
}
