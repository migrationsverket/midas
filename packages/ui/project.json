{
  "name": "ui",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/ui/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/ui/**/*.{ts,tsx,js,jsx}",
          "packages/ui/package.json",
          "packages/ui/project.json"
        ]
      }
    },
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/ui"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/ui/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "storybook": {
      "executor": "@nx/storybook:storybook",
      "options": {
        "port": 4400,
        "configDir": "packages/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@nx/storybook:build",
      "outputs": ["{options.outputDir}"],
      "options": {
        "outputDir": "dist/storybook/ui",
        "configDir": "packages/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true,
          "outputDir": "build/storybook"
        }
      }
    },
    "test-storybook": {
      "executor": "nx:run-commands",
      "options": {
        "command": "test-storybook -c packages/.storybook --url=http://localhost:4400"
      }
    },
    "static-storybook": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "ui:build-storybook",
        "staticFilePath": "dist/storybook/ui"
      },
      "configurations": {
        "ci": {
          "buildTarget": "ui:build-storybook:ci"
        }
      }
    },
    "pre-release-components": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx release --skip-publish",
          "nx run-many -t lint --fix --exclude=tag:apps"
        ],
        "parallel": false
      }
    },
    "release-components": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx release --skip-publish",
          "nx run-many -t build --exclude=tag:apps --skipNxCache --emptyOutDir",
          "nx release publish",
          "npx git-cliff -c tools/cliff.toml -o CHANGELOG.md"
        ],
        "parallel": false
      }
    }
  }
}
