{
  "extends": ["../../.stylelintrc.json"],
  "ignoreFiles": ["!**/*", "**/*/variables.css"],
  "overrides": [
    {
      "files": ["**/*.css"],
      "rules": {
        "csstools/value-no-unknown-custom-properties": [
          true,
          {
            "importFrom": ["packages/components/src/theme/variables.css"]
          }
        ]
      }
    },
    {
      "files": ["src/theme/theme.css", "src/theme/tokens.css"],
      "rules": {
        "color-hex-length": null
      }
    }
  ]
}
