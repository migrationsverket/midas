{
  "name": "components",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/components/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "generate-theme-css": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nx g @midas-ds/workspace-tools:generate-theme"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/components/jest.config.ts"
      }
    },
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/packages/components"
      },
      "dependsOn": ["generate-theme-css"],
      "configurations": {
        "production": {
          "optimization": true,
          "sourceMap": false,
          "namedChunks": false,
          "extractLicenses": true,
          "vendorChunk": false
        }
      }
    },

    "storybook": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx storybook dev",
        "cwd": "packages/components",
        "port": 4400
      },
      "configurations": {
        "ci": {
          "args": ["--quiet"]
        }
      }
    },
    "build-storybook": {
      "executor": "nx:run-commands",
      "outputs": ["{options.output-dir}"],
      "options": {
        "cwd": "packages/components",
        "command": "npx storybook build",
        "output-dir": "../../dist/storybook/ui"
      },
      "configurations": {
        "ci": {
          "args": ["--quiet", "output-dir=../../dist/docs/storybook"]
        }
      }
    },
    "test-storybook": {
      "executor": "@nx/vite:test",
      "options": {
        "config": "packages/components/vitest.config.ts",
        "project": "storybook"
      },
      "configurations": {
        "watch": {
          "watch": true
        },
        "dark-mode": {
          "config": "packages/components/vitest.config.dark.ts",
          "project": "storybook:dark-mode"
        },
        "dark-mode:watch": {
          "config": "packages/components/vitest.config.dark.ts",
          "watch": true,
          "project": "storybook:dark-mode"
        }
      }
    },
    "generate-dependencies": {
      "dependsOn": [
        {
          "target": "build"
        }
      ],
      "executor": "@midas-ds/dependencies:dependencies",
      "options": {
        "outputDir": "dist/packages/components",
        "filter": "@storybook"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/components/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "stylelint": {
      "executor": "nx-stylelint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/components/**/*.css"],
        "formatter": "unix"
      }
    },
    "compile": {
      "executor": "@nx/js:tsc",
      "options": {
        "main": "packages/components/src/index.ts",
        "outputPath": "dist/tsc",
        "tsConfig": "packages/components/tsconfig.lib.json",
        "watch": true,
        "generatePackageJson": false
      }
    }
  }
}
