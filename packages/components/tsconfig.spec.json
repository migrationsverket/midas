{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "types": ["jest", "node"],
    "paths": {
      "tests/*": ["packages/components/tests/*"]
    }
  },
  "include": [
    "jest.config.ts",
    "src/**/*.test.*",
    "src/**/*.spec.*",
    "src/**/*.d.ts",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ]
}
