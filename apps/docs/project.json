{
  "name": "docs",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/docs/src",
  "tags": ["docs", "apps"],
  "targets": {
    "build": {
      "executor": "@midas-ds/docusaurus:browser",
      "options": {
        "outputPath": "dist/docs",
        "minify": false
      },
      "dependsOn": ["theme:style-dictionary-generate", "^build"]
    },
    "serve": {
      "executor": "@midas-ds/docusaurus:dev-server",
      "options": {
        "hideApi": false,
        "port": 3000
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/docs/**/*.{ts,tsx,js,jsx,mdx}"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "apps/docs/jest.config.js"
      }
    },
    "contrast-check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx playwright test",
        "cwd": "apps/docs"
      }
    }
  }
}
