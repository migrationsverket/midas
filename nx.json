{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "release": {
    "conventionalCommits": {
      "types": {
        "test": {
          "semverBump": "none",
          "changelog": {
            "title": "üß™ Tests updated"
          }
        },
        "docs": {
          "semverBump": "none",
          "changelog": {
            "title": "üìñ Documentation changes"
          }
        },
        "chore": {
          "semverBump": "none",
          "changelog": {
            "title": "üîß Maintenance"
          }
        },
        "refactor": {
          "changelog": {
            "title": "üè≠ Refactoring"
          }
        },
        "perf": {
          "changelog": {
            "title": "üèá Performance improvements"
          }
        },
        "style": {
          "semverBump": "none",
          "title": "‚úèÔ∏è Code style changes"
        },
        "revert": {
          "changelog": {
            "title": "üîô Rollback changes"
          }
        },
        "ops": {
          "semverBump": "none",
          "changelog": {
            "title": "üç¨ DevOps changes"
          }
        },
        "types": {
          "__INVALID__": {
            "changelog": {
              "title": "Uncategorized changes"
            }
          }
        }
      }
    },
    "changelog": {
      "commitReferences": true,
      "workspaceChangelog": false,
      "projectChangelogs": {
        "renderOptions": {
          "authors": false,
          "versionTitleDate": true
        }
      },
      "automaticFromRef": true
    },
    "projectsRelationship": "independent",
    "projects": [
      "packages/components",
      "!packages/.storybook",
      "theme",
      "table-styles"
    ],
    "releaseTagPattern": "{projectName}@v{version}",
    "git": {
      "commitMessage": "chore(release): release {projectName} package, version {version} [skip-ci]",
      "push": false
    },
    "version": {
      "preVersionCommand": "npx nx run-many -t -p=[components, theme] build",
      "specifierSource": "conventional-commits",
      "currentVersionResolver": "git-tag",
      "updateDependents": "auto",
      "preserveLocalDependencyProtocols": false
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"],
      "cache": true
    },
    "e2e": {
      "inputs": ["default", "^production"]
    },
    "test": {
      "inputs": ["default", "^production", "{workspaceRoot}/jest.preset.js"],
      "cache": true
    },
    "lint": {
      "inputs": [
        "default",
        "{workspaceRoot}/.eslintrc.json",
        "{workspaceRoot}/.eslintignore"
      ],
      "cache": true
    },
    "nx-release-publish": {
      "dependsOn": ["build"],
      "options": {
        "packageRoot": "{workspaceRoot}/dist/packages/{projectName}"
      }
    },
    "build-storybook": {
      "inputs": [
        "default",
        "^production",
        "{projectRoot}/.storybook/**/*",
        "{projectRoot}/tsconfig.storybook.json"
      ]
    },
    "@nx/eslint:lint": {
      "inputs": [
        "default",
        "{workspaceRoot}/.eslintrc.json",
        "{workspaceRoot}/.eslintignore"
      ],
      "cache": true
    },
    "@nx/vite:build": {
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"]
    },
    "@nx/next:build": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"]
    },
    "stylelint": {
      "inputs": [
        "default",
        "{workspaceRoot}/.stylelintrc(.(json|yml|yaml|js))?"
      ],
      "cache": true
    },
    "@nx/js:tsc": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"]
    }
  },
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "production": [
      "default",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/.eslintrc.json",
      "!{projectRoot}/jest.config.[jt]s",
      "!{projectRoot}/**/*.stories.@(js|jsx|ts|tsx|mdx)",
      "!{projectRoot}/.storybook/**/*",
      "!{projectRoot}/src/test-setup.[jt]s",
      "!{projectRoot}/tsconfig.storybook.json",
      "!{projectRoot}/.stylelintrc(.(json|yml|yaml|js))?"
    ],
    "sharedGlobals": []
  },
  "workspaceLayout": {
    "appsDir": "apps",
    "libsDir": "packages"
  },
  "generators": {
    "@nx/react": {
      "application": {
        "style": "css",
        "linter": "eslint",
        "bundler": "vite",
        "babel": true
      },
      "component": {
        "style": "css"
      },
      "library": {
        "style": "css",
        "linter": "eslint",
        "unitTestRunner": "jest"
      }
    },
    "@nx/next": {
      "application": {
        "style": "css",
        "linter": "eslint"
      }
    }
  },
  "plugins": [
    {
      "plugin": "@nx/eslint/plugin",
      "options": {
        "targetName": "eslint:lint"
      }
    },
    {
      "plugin": "@nx/vite/plugin",
      "options": {
        "buildTargetName": "vite:build",
        "testTargetName": "test",
        "serveTargetName": "vite:serve",
        "previewTargetName": "vite:preview",
        "serveStaticTargetName": "vite:serve-static",
        "typecheckTargetName": "typecheck"
      }
    },
    {
      "plugin": "@nx/storybook/plugin",
      "options": {
        "serveStorybookTargetName": "storybook",
        "buildStorybookTargetName": "build-storybook",
        "testStorybookTargetName": "test-storybook",
        "staticStorybookTargetName": "static-storybook"
      }
    },
    {
      "plugin": "@nx/react/router-plugin",
      "options": {
        "buildTargetName": "build",
        "devTargetName": "dev",
        "startTargetName": "start",
        "watchDepsTargetName": "watch-deps",
        "buildDepsTargetName": "build-deps",
        "typecheckTargetName": "typecheck"
      }
    }
  ]
}
